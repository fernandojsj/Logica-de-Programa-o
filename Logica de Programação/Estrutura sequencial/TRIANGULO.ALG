Algoritmo "semnome"

Var

      base, altura, area, perimetro,diagonal : real


Inicio

      escreva ("Digite o valor da base: ")
      leia (base)
      escreva ("Digite a altura: ")
      leia (altura)

      area <- base * altura / 2.0

      perimetro <- base + altura

      escreval ("Area é igual á: ",area)
      escreva ("Perimetro é igual á: ",perimetro)

Fimalgoritmo